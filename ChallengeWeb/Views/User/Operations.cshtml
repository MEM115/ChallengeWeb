@model OperationViewModel

@{
    ViewData["Title"] = "Listado de Operaciones";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header text-center bg-secondary text-white">
                    Listado de Operaciones
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var operation in Model.Operations)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <p><strong>Fecha y Hora de la Operación:</strong> @operation.OperationTime?.ToString("g")</p>
                                        <p><strong>Monto:</strong> $@operation.Amount</p>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @for (int i = 0; i < Math.Ceiling((double)Model.Total / 10); i++)
                            {
                                <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Operations", "User", new { page = i })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>